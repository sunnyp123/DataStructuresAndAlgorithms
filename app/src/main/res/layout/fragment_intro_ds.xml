<?xml version="1.0" encoding="utf-8"?>
<ScrollView android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent">
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
    android:orientation="vertical"
android:layout_height="match_parent"
tools:context=".IntroDs">
<TextView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10sp"
    android:text="Data Structures"
    android:textAlignment="center"
    android:textSize="30sp"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="15sp"
        android:layout_margin="5sp"
        android:textAlignment="textStart"
        android:textColor="@android:color/black"
        android:text="Data Structure is a particular way of stroing data in memory so that can be used later efficiently.
Data may be arranged in diffrent ways."
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10sp"
        android:text="Categories of Data Structures."
        android:textAlignment="center"
        android:textSize="20sp"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="15sp"
        android:text="The data structure can be subdivided into major types:\n

1.) Linear Data Structure\n
2.) Non-linear Data Structure"
        android:textColor="@android:color/black"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10sp"
        android:text=" 1.) Linear Data Structures"
        android:textSize="20sp"/>
   <TextView
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:textColor="@android:color/black"
       android:textSize="15sp"
       android:layout_marginLeft="10sp"
       android:text="Data Structure is said to be linear if there is linear relation among data i.e.,elements are linked linearly.
The common examples of the linear data structure are:\n

    .Arrays\n
    .Queues\n
    .Stacks\n
    .Linked lists\n"
       />
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">
    <ImageView
        android:layout_width="wrap_content"
        android:layout_weight="1"
        android:layout_margin="5sp"
        android:id="@+id/image1"
        android:layout_height="wrap_content"
        android:src="@mipmap/ghonda" />
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:id="@+id/image2"
        android:layout_margin="5sp"
        android:src="@mipmap/ghonda2"/>
</LinearLayout>


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10sp"
        android:text=" 2.) Non-Linear Data Structures"
        android:textSize="20sp"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="15sp"
        android:textColor="@android:color/black"
        android:layout_marginLeft="10sp"
        android:text="This structure is mostly used for representing data that contains a hierarchical relationship among various elements.\n

Examples of Non-Linear Data Structures are listed below:\n

    .Graphs\n
    .Family of trees\n
"/>
<ImageView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10sp"
    android:id="@+id/image3"
    android:src="@mipmap/ghonda3"/>
</LinearLayout>

</ScrollView>